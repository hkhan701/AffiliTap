{
  "manifest_version": 3,
  "name": "AffiliTap",
  "description": "A tool to help you copy amazon posts easily and quickly",
  "version": "1.0",
  "permissions": ["storage", "activeTab", "scripting", "clipboardWrite", "alarms", "sidePanel", "tabs"],
  "host_permissions": ["*://www.amazon.ca/*", "*://www.amazon.com/*"],
  "icons": {
    "48": "assets/images/icon-16.png",
    "128": "assets/images/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "assets/images/icon-16.png"
    },
    "default_title": "AffiliTap",
    "__chrome|opera__chrome_style": false,
    "__firefox__browser_style": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>", "*://*/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
        "default_path": "sidepanel/index.html",
        "matches": ["*://www.amazon.ca/*", "*://*.amazon.ca/*","*://www.amazon.com/*", "*://*.amazon.com/*" ] 
    }
}
