{
  "manifest_version": 3,
  "name": "AffiliTap - AI Amazon Affiliate Post Generator to Create Posts Instantly",
  "description": "AI-powered Amazon affiliate marketing tool. Generate social media posts with product data, prices, and affiliate links in one click.",
  "version": "1.28",
  "permissions": ["storage", "activeTab", "clipboardWrite", "sidePanel"],
  "host_permissions": ["*://*.amazon.ca/*", "*://*.amazon.com/*", "https://title-summarizer.vercel.app/*", "https://joylink.io/*", "https://creators.posttap.com/*", "https://my.geniuslink.com/*"],
  "icons": {
    "16": "assets/images/icon-16.png",
    "32": "assets/images/icon-16.png",
    "48": "assets/images/icon-16.png",
    "128": "assets/images/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "assets/images/icon-16.png"
    },
    "default_title": "AffiliTap",
    "__chrome|opera__chrome_style": false,
    "__firefox__browser_style": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.amazon.ca/*", "*://*.amazon.com/*", "*://m.media-amazon.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
        "default_path": "sidepanel/index.html",
        "matches": ["*://*.amazon.ca/*", "*://*.amazon.com/*"]
    }
}
